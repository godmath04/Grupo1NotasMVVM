<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grupo1NotasMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:Grupo1NotasMVVM.Views"
    
    Shell.FlyoutBehavior="Disabled"
    Title="Grupo1NotasMVVM">

    <TabBar>
        <ShellContent
        Title="Notas"
        ContentTemplate="{DataTemplate Views:AllNotesPage}"
        Icon="{OnPlatform 'icononotas.png'}"
        />

        <ShellContent
        Title="Weather"
        ContentTemplate="{DataTemplate Views:WeatherView}" 
        Icon="{OnPlatform 'iconweather.png'}"
        />

        <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate Views:AboutPage}" 
        Icon="{OnPlatform 'iconoabout.png'}"
        />
        <ShellContent
        Title="Recordatorios"
        ContentTemplate="{DataTemplate Views:RecordatorioPage}"
        Icon="{OnPlatform 'iconorecordatorio.png'}" 
        />

    </TabBar>

</Shell>
